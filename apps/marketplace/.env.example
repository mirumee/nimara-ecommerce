# Server Configuration
NODE_ENV=development
PORT=3001
BASE_PATH=

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# AWS Configuration (LocalStack for development)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_SESSION_TOKEN=
AWS_REGION=ap-southeast-1
AWS_ENDPOINT_URL=http://localhost:4566

# Secrets Manager
SECRET_MANAGER_APP_CONFIG_PATH=/marketplace/app-config

# Saleor Configuration
NEXT_PUBLIC_SALEOR_URL=https://your-saleor-instance.saleor.cloud/graphql/
NEXT_PUBLIC_SALEOR_MARKETPLACE_CHANNEL_SLUG=default-channel
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:3001/api/graphql

# Frontend URLs
NEXT_PUBLIC_MARKETPLACE_VENDOR_URL=http://localhost:3001
NEXT_PUBLIC_MARKETPLACE_STOREFRONT_URL=http://localhost:3000

# Development Only
NEXT_PUBLIC_SALEOR_UI_APP_TOKEN=your-dev-token
