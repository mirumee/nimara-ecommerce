{
  "extends": "@nimara/config/tsconfig/react-library",
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*/*.d.ts"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "paths": {
      "@nimara/infrastructure/*": ["./src/*"],
      "@nimara/foundation/*": ["../foundation/src/*"],
      "@nimara/domain/*": ["../domain/src/*"],
      "@nimara/features/*": ["../features/src/*"],
      "@nimara/i18n/*": ["../i18n/src/*"],
      "@nimara/ui/*": ["../ui/src/*"],
      "@nimara/codegen/*": ["../codegen/*"]
    }
  }
}
