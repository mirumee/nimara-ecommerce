{
  "extends": "@nimara/config/tsconfig/react-library",
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*/*.d.ts",
    "../../apps/storefront/src/foundation/errors/errors.ts"
  ],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "declaration": true,
    "paths": {
      "@nimara/foundation/*": ["./src/*"],
      "@nimara/domain/*": ["../domain/src/*"],
      "@nimara/infrastructure/*": ["../infrastructure/src/*"],
      "@nimara/i18n/*": ["../i18n/src/*"],
      "@nimara/ui/*": ["../ui/src/*"],
      "@nimara/codegen/*": ["../codegen/*"]
    }
  }
}
