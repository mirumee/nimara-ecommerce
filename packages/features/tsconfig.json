{
  "extends": "@nimara/config/tsconfig/react-library",
  "include": ["src/**/*", "src/**/*.d.ts"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "paths": {
      "@nimara/features/*": ["./src/*"],
      "@nimara/foundation/*": ["../foundation/src/*"],
      "@nimara/domain/*": ["../domain/src/*"],
      "@nimara/infrastructure/*": ["../infrastructure/src/*"],
      "@nimara/i18n/*": ["../i18n/src/*"]
    }
  }
}
