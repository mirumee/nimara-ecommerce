{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "AUTH_SECRET",
    "ENVIRONMENT",
    "LOG_LEVEL",
    "SALEOR_APP_TOKEN",
    "SENTRY_AUTH_TOKEN",
    "SENTRY_DEBUG",
    "SENTRY_DSN",
    "SENTRY_ENVIRONMENT",
    "SENTRY_ORG",
    "SENTRY_PROJECT",
    "STRIPE_SECRET_KEY",
    "TEST_ENV_URL",
    "USER_EMAIL",
    "USER_PASSWORD"
  ],
  "remoteCache": {
    "enabled": true
  },
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^codegen", "^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "ANALYZE",
        "NEXT_PUBLIC_CMS_SERVICE",
        "NEXT_PUBLIC_SALEOR_API_URL",
        "NEXT_PUBLIC_SEARCH_SERVICE",
        "NEXT_PUBLIC_STOREFRONT_URL"
      ],
      "inputs": ["$TURBO_DEFAULT$", "!.next/**"]
    },
    "stripe#build": {
      "env": ["CONFIG_KEY", "VERCEL_EDGE_CONFIG_ID"]
    },
    "codegen": {
      "dependsOn": ["^codegen"],
      "env": ["NEXT_PUBLIC_SALEOR_API_URL"],
      "outputs": ["./schema.ts", "./graphql/**"],
      "inputs": ["../../**/*.graphql"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:staged": {
      "dependsOn": ["^lint:staged"]
    },
    "start": {
      "dependsOn": ["^codegen", "^start"]
    },
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:e2e": {
      "dependsOn": ["^test:e2e"],
      "cache": false
    },
    "test:all": {
      "dependsOn": ["^test:e2e", "^test"]
    },
    "install": {
      "dependsOn": ["^install"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
